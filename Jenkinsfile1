
#hii
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "Building the application..."
                // example:
                // npm install
                // mvn clean install
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                // npm test
                // mvn test
            }
        }
    }

    post {
        success {
            echo "Build Successful ğŸ‰"
        }
        failure {
            echo "Build Failed âŒ"
        }
    }
}
